<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>wshcmx</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <ItemGroup Condition="'$(IsCI)' != 'true'">
    <Reference Include="Datex.Global">
      <HintPath>.\Externals\Datex.Global.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup Condition="'$(Configuration)' == 'Release'">
    <ProjectReference Include="..\PseudoDatex\PseudoDatex.csproj" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Internals\Internals.csproj" />
  </ItemGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <DefineConstants>CI</DefineConstants>
  </PropertyGroup>

</Project>
